<h1>New Book</h1>

<%= form_for(@book) do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :Author %>
  <%= f.text_field :author %>
  <br>

  <%= f.label :isbn_code %>
  <%= f.text_field :isbn_code %>
  <br>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>

  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <br>

  <%= f.submit %>
<% end %>
